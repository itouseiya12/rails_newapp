<h3>スケジュール詳細</h3>

<%= link_to '予定を編集する',edit_schedule_path %>

<table>
  <tr>
    <th>タイトル</th>
    <td><%= @schedule.title %></td>
  </tr>
  <tr>
    <th>開始日</th>
    <td><%= @schedule.starting_date %></td>
  </tr>
  <tr>
    <th>終了日</th>
    <td><%= @schedule.ending_date %></td>
  </tr>
  <tr>
    <th>メモ</th>
    <td><%= @schedule.memo %></td>
  </tr>
  <tr>
    <th>終日</th>
    <td><% if @schedule.is_all_day == true %>
    <%= "○" %>
    <% end %>
    </td>
  </tr>
</table>

<%= link_to '一覧へ戻る',schedules_path %>