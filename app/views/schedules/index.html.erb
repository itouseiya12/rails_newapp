
  <h1>スケジュール管理アプリ</h1>

    <div class="flash-notifications">
    <% flash.each do |key, value| %>
    <%= content_tag(:div, value, class: key) %>
    <% end %>
    </div>

  

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>タイトル</th>
      <th>開始日</th>
      <th>終了日</th>
      <th>終日</th>
      <th>更新日時</th>
      <th>詳細</th>
      <th>編集</th>
      <th>削除</th>
    </tr>
  </thead>

  <tbody>
  <% @schedules.each do |schedule|%>
  <tr>
    <td><%= schedule.id %></td>
    <td><%= schedule.title %></td>
    <td><%= schedule.starting_date.strftime('%Y/%m/%d') %></td>
    <td><%= schedule.ending_date.strftime('%Y/%m/%d') %></td>
    <td><% if schedule.is_all_day == true %>
    <%= "○" %>
    <% end %>
    </td>
    <td><%= schedule.updated_at.to_s(:datetime_jp) %></td>
    <td><%= link_to '詳細',schedule_path(schedule)%></td>
    <td><%= link_to '編集',edit_schedule_path(schedule)%></td>
    <td><%= link_to '削除',schedule_path(schedule),
    data: { turbo_method: 'delete', turbo_confirm: '予定を削除しますか？' } %></td>
  </tr>
  <% end %>
  </tbody>
</table>

<p><%= link_to '新規スケジュール作成',new_schedule_path%></p>

<div class="FooterBody">
  <td>予定合計:<%= @schedules.count %><span>件</span></td>
  <td>今日の日付：<%= Date.current.strftime('%Y/%m/%d') %></td>
</div>


